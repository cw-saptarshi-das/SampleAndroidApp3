<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/cardContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/carImage"
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/stockCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:textSize="13sp"
                android:fontFamily="@font/lato"
                android:textColor="#333333"
                android:text="2018 Toyota Innova Crysta 2.4 VX 7 SX"/>

            <TextView
                android:id="@+id/additionalDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:paddingStart="12dp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:fontFamily="@font/lato"
                android:textColor="#6f6f6f"
                android:text="40,000 km  |  Petrol  |  Automatic  |  Thane"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceAndOfferSection"
                android:orientation="horizontal"
                android:layout_marginBottom="13dp">

                <TextView
                    android:id="@+id/carPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="12dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/lato"
                    android:text="Rs. 22.35 Lakh"/>

                <TextView
                    android:id="@+id/makeOfferButton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#0288d1"
                    android:fontFamily="@font/lato"
                    android:text="Make Offer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emiPriceSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#6f6f6f"
                    android:fontFamily="@font/lato"
                    android:text="EMI starts at "/>
                <TextView
                    android:id="@+id/emiPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0288d1"
                    android:textStyle="bold"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/lato"
                    android:text="Rs. 10,299" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/whatsappLeadButton"
                    android:layout_width="96dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/whatsapp_lead_button">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icons_all_whats_app"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#00afa0"
                        android:fontFamily="@font/lato"
                        android:text="Chat"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
                
                <TextView
                    android:id="@+id/gsdLeadButton"
                    android:layout_width="192dp"
                    android:layout_height="40dp"
                    android:background="@drawable/gsd_lead_button"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:fontFamily="@font/lato"
                    android:text="Get Seller Details" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>